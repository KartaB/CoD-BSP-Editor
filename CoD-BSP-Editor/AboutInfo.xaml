<Window x:Class="CoD_BSP_Editor.AboutInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoD_BSP_Editor"
        mc:Ignorable="d"
        Title="About author" Height="225" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="0 10 0 10">
            <TextBlock FontSize="24" FontWeight="DemiBold" Margin="10 10 10 20" HorizontalAlignment="Center" Name="AppTitle"/>
            <TextBlock FontSize="20" Margin="10 5 10 5" HorizontalAlignment="Center" Name="AppAuthor"/>
            <TextBlock FontSize="20" Margin="10 5 10 5" HorizontalAlignment="Center">
                <Hyperlink RequestNavigate="GitHubNavigate" Name="Hyperlink"/>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
