<Window x:Class="CoD_BSP_Editor.EntityTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoD_BSP_Editor"
        mc:Ignorable="d"
        Title="Entity as text" Height="500" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <ScrollViewer>
                <TextBox FontSize="18" Name="EntityText" Width="500" Height="500" IsReadOnly="True" Padding="10 20 10 20">Text</TextBox>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
