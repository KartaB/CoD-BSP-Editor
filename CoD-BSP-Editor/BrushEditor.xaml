<Window x:Class="CoD_BSP_Editor.BrushEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoD_BSP_Editor"
        mc:Ignorable="d"
        Title="Brush Editor" Height="600" Width="1300" WindowStartupLocation="CenterScreen">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Visible">
            <StackPanel Name="BrushFields">
                <StackPanel Orientation="Horizontal">
                    <Button Width="200" FontSize="20" Margin="10" HorizontalAlignment="Left" Click="FindBrush">Find brush index</Button>
                    <Button Width="200" FontSize="20" Margin="10" HorizontalAlignment="Left" Click="RemoveByArea">Remove by area</Button>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
