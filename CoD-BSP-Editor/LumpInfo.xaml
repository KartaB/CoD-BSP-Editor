<Window x:Class="CoD_BSP_Editor.LumpInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoD_BSP_Editor"
        mc:Ignorable="d"
        Title="LumpInfo" Height="600" Width="875" WindowStartupLocation="CenterScreen">
    <Grid>
        <ScrollViewer>
            <StackPanel Name="LumpsPanel" Margin="0 5 0 0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="20" Width="240">Lump</TextBlock>
                    <TextBlock FontSize="20" Width="150">Offset</TextBlock>
                    <TextBlock FontSize="20" Width="150">Length</TextBlock>
                    <TextBlock FontSize="20" Width="150">End Offset</TextBlock>
                    <TextBlock FontSize="20" Width="100">Entries</TextBlock>
                </StackPanel>
                <StackPanel Margin="0 5 0 5">
                    <Separator Width="875"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
