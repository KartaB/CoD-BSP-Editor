<Window x:Class="CoD_BSP_Editor.InputDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoD_BSP_Editor"
        mc:Ignorable="d"
        Title="InputDialogWindow" Height="200" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel x:Name="Container" HorizontalAlignment="Center" VerticalAlignment="Center" Width="350">
            <TextBlock x:Name="PromptText" Height="25" FontSize="18"></TextBlock>
            <TextBox x:Name="ValueTextBox" Width="350" FontSize="18" Margin="0 10 0 10"/>
            <Button Content="Confirm" Click="OnConfirm" FontSize="18" Width="100" Padding="5" Margin="0 10 0 10" />
        </StackPanel>
    </Grid>

</Window>
